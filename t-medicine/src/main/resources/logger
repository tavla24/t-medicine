appenders=console, file

appender.file=org.apache.log4j.RollingFileAppender
appender.file.threshold=DEBUG
appender.file.File=/tmp/t-medicine.log
appender.file.MaxFileSize=1MB
appender.file.MaxBackupIndex=1
appender.file.layout=PatternLayout
appender.file.layout.pattern= %d{yyyy-MM-dd HH:mm:ss} %-5p %c{1}:%L - %m%n

appender.console.type = Console
appender.console.name = consoleLogger
appender.console.layout.type = PatternLayout
appender.console.layout.pattern = %d{yyyy-MM-dd HH:mm:ss} %-5p %c{1}:%L - %m%n

logger.stdout.name = com.milaev.medicine
logger.stdout.level = debug
logger.stdout.additivity = false
logger.stdout.appenderRef.stdout.ref = consoleLogger

rootLogger.level = error
rootLogger.appenderRef.stdout.ref = consoleLogger